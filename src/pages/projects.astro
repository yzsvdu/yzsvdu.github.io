---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
      title="Ascendit Bouldering"
      img="/ascendit-logo.png"
      bannerImg="/ascendit-banner.jpeg"
      desc="Universal Indoor Bouldering Route Tracker and Social Media"
      url="https://apps.apple.com/us/app/ascendit-bouldering/id6754680018"
      badge="NEW"
  />
  <HorizontalCard
      title="Fours & Five: Restaurant Discovery"
      bannerImg="/fours-fives-banner.jpeg"
      desc="Cross Platform Restaurant Discovery App focused on promoting curated lists by trusted reviewers"
      url=""
      badge="REACT NATIVE"
  />
  <HorizontalCard
      title="Red Trainer Desktop App"
      bannerImg="/redtrainer-banner.jpeg"
      desc="Modded game emulator for automating gameplay and improving quality of life"
      url="https://github.com/yzsvdu/RedTrainer"
      badge="JAVA"
  />
  <HorizontalCard
      title="Modern Chinese Dictionary"
      bannerImg="/mcd-banner.jpeg"
      desc="Custom Chinese Language Learning Tool and Parser to help with reading"
      url="https://github.com/yzsvdu/ModernChineseDictionary"
      badge="SPRING BOOT"
  />
</BaseLayout>
