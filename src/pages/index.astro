---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout navActiveItemID="home">
    <!-- HERO -->
    <section class="mt-6 mb-10">
      <div class="flex flex-col md:flex-row items-center gap-6 rounded-2xl border border-base-300 bg-base-200/60 backdrop-blur px-6 py-6 shadow-sm">

        <!-- Text -->
        <div class="flex-1">
          <div class="text-sm opacity-70 mb-1">Hey, I’m</div>

          <h1 class="text-3xl md:text-4xl font-bold leading-tight">
            Vincent Duong
          </h1>

          <div class="mt-1 text-base md:text-lg font-medium opacity-90">
            Aspiring Full Stack Engineer • Founder of Ascendit
          </div>

          <p class="mt-3 text-sm md:text-base opacity-85 max-w-xl">
            Building a computer-vision powered iOS app for indoor climbing.
            Full-stack with SwiftUI, Django/FastAPI, PostgreSQL, and GPU-backed ML.
          </p>

          <div class="mt-4 flex flex-wrap gap-2">
            <a
                class="btn btn-primary btn-sm"
                href="https://www.linkedin.com/in/vnnsnnt"
                target="_blank"
                rel="noopener noreferrer"
            >
              LinkedIn
            </a>

            <a
                class="btn btn-outline btn-sm"
                href="https://github.com/yzsvdu"
                target="_blank"
                rel="noopener noreferrer"
            >
              GitHub
            </a>

            <a class="btn btn-ghost btn-sm" href="/projects">
              Projects →
            </a>
          </div>
        </div>

        <!-- Profile Image -->
        <div class="shrink-0">
          <div class="avatar">
            <div class="w-24 md:w-28 rounded-full ring ring-primary/30 ring-offset-base-100 ring-offset-2">
              <img src="/pfp.jpg" alt="Vincent Duong profile photo" />
            </div>
          </div>
        </div>

      </div>
    </section>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My latest projects</div>
  </div>

  <HorizontalCard
      title="Ascendit Bouldering"
      img="/ascendit-logo.png"
      bannerImg="/ascendit-banner.jpeg"
      desc="Universal Indoor Bouldering Route Tracker and Social Media"
      url="https://apps.apple.com/us/app/ascendit-bouldering/id6754680018"
      badge="NEW"
  />
  <div class="divider my-0"></div>
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
